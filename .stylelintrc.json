{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": "tab",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "if",
          "else",
          "function",
          "include",
          "mixin",
          "return",
          "content",
          "warn"
        ]
      }
    ],
    "no-missing-end-of-source-newline": null
  }
}